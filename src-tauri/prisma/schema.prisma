datasource db {
    provider = "sqlite"
    url      = "file:dev/openchat-dev.db"
}

generator client {
    provider    = "cargo prisma"
    output      = "../src/prisma.rs"
    module_path = "crate::prisma"
}

model Prompt {
    id       Int    @id @default(autoincrement())
    title    String
    descript String
    prompt   String
}

model SessionData {
    id           Int     @id @default(autoincrement())
    sessionId    String
    role         String
    message      String
    is_ask       Boolean
    is_memory    Boolean
    message_type String
    model        String
}

model Session {
    id          String @id
    title       String
    role_id     Int
    type        String
}

model Settings {
    id    Int    @id @default(autoincrement())
    key   String
    value String
}
